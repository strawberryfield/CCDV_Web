@page
@using Casasoft.CCDV_Web.Components
@model Casasoft.CCDV_Web.Pages.MontaggioFotoModel
@{
    ViewData["Title"] = "Montaggio Foto";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-3 bg-lightgray h-100">
            <div class="container-fluid">
                <form method="post" enctype="multipart/form-data">
                    <div class="row vspace">
                        <div class="col">
                            <label>
                                Files da caricare
                                <input type="file" asp-for="Upload" multiple />
                            </label>
                        </div>
                    </div>
                    <component id="BaseOptions" name="BaseOptions" type="typeof(CommonOptions)" render-mode="Static" />

                </form>
            </div>
        </div>
        <div class="col">
            <img id="Preview" class="img-fluid" src="~/results/result.jpg" />
        </div>
    </div>
</div>