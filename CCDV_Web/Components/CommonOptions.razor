<div class="row">
    <div class="col-md-4">
        <label for="FillColor">Fill color</label>
        <input type="color" id="FillColor" name="FillColor" value="@FillColor" class="form-control" />
    </div>
    <div class="col-md-4">
        <label for="BorderColor">Border color</label>
        <input type="color" id="BorderColor" name="BorderColor" value="@BorderColor" class="form-control" />
    </div>
    <div class="col-md">
        <label for="DPI">DPI</label>
        <input type="number" id="DPI" name="DPI" value="@DPI" class="form-control" />
    </div>
</div>
<div class="row">
    <div class="col">
        <label for="UploadScript">Script file</label>
        <input type="file" id="UploadScript" name="UploadScript" class="form-control" />
    </div>
</div>
<div class="row">
    <div class="col">
        <label for="Tag">Tag</label>
        <input type="text" id="Tag" name="Tag" value="@Tag" class="form-control" />
    </div>
</div>

<div class="row vspace">
    <div class="col">
        <input type="submit" class="form-control" />
    </div>
</div>

@code {
    [Parameter]
    public string FillColor { get; set; }
    [Parameter]
    public string BorderColor { get; set; }
    [Parameter]
    public int DPI { get; set; }
    [Parameter]
    public string Tag { get; set; }

}
