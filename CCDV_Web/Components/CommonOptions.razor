<div class="row vspace">
    <div class="col">
        <label>
            <input type="color" id="FillColor" name="FillColor" value="@FillColor" />&nbsp;Fill color
        </label>
    </div>
</div>
<div class="row vspace">
    <div class="col">
        <label>
            <input type="color" id="BorderColor" name="BorderColor" value="@BorderColor" />&nbsp;Border color
        </label>
    </div>
</div>
<div class="row vspace">
    <div class="col">
        <label>
            <input type="number" id="DPI" name="DPI" value="@DPI" />&nbsp;DPI
        </label>
    </div>
</div>

<div class="row vspace">
    <div class="col">
        <input type="submit" />
    </div>
</div>

@code {
    [Parameter]
    public string FillColor { get; set; } = "#ffffff";
    [Parameter]
    public string BorderColor { get; set; } = "#000000";
    [Parameter] 
    public int DPI { get; set; } = 300;
}
