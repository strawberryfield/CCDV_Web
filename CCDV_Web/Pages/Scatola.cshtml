@page
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@using Casasoft.CCDV_Web.Components
@model Casasoft.CCDV_Web.Pages.ScatolaModel
@{
    ViewData["Title"] = "Scatola";
}

<div class="row g-2 flex-grow-1">
    <div class="col-md-3 bg-lightgray">
        <form method="post" enctype="multipart/form-data">
            <div class="container-fluid ">
                <component type="typeof(BaseBuilderOptions)" render-mode="Static"
                           param-UseTestImages="@Model.UseTestImages" param-PaperFormat="@Model.PaperFormat" 
                           param-TargetFormat="@Model.TargetFormat" param-isHorizontal="@Model.isHorizontal" 
                           param-Thickness="@Model.Thickness" param-BorderText="@Model.BorderText"
                           param-FontFace="@Model.FontFace" param-FontBold="@Model.FontBold" 
                           param-FontItalic="@Model.FontItalic" />
                <component type="typeof(CommonOptions)" render-mode="Static"
                           param-FillColor="@Model.FillColor" param-BorderColor="@Model.BorderColor"
                           param-DPI="@Model.DPI" param-Tag="@Model.Tag" />
            </div>
        </form>
    </div>
    <component type="typeof(ImageViewer)" render-mode="Static" param-ImgBase64="@Model.ImgBase64" />
</div>

